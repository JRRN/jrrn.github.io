        <span class="p">}</span>

        <span class="k">private</span> <span class="k">void</span> <span class="nf">WriteLCD_Click</span><span class="p">(</span><span class="kt">object</span> <span class="n">sender</span><span class="p">,</span> <span class="n">RoutedEventArgs</span> <span class="n">e</span><span class="p">)</span>
